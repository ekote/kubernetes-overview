{
	"apiVersion": "v1",
	"kind": "ReplicationController",
	"metadata": {
		"name": "wordpress-rc",
		"labels": {
			"name": "wordpress-rc"
		}
	},
	"spec": {
		"replicas": 3,
		"selector": {
			"name": "wordpress"
		},
		"template": {
			"metadata": {
				"name": "wordpress",
				"labels": {
					"name": "wordpress"
				}
			},
			"spec": {
				"containers": [
					{
						"name": "wordpress",
						"image": "wordpress:latest",
						"ports": [
							{
								"name": "http",
								"protocol": "TCP",
								"containerPort": 80
							}
						],
						"env": [
							{
								"name": "WORDPRESS_DB_HOST",
								"value": "mysql-service:3306"
							},
							{
								"name": "WORDPRESS_DB_USER",
								"value": "root"
							},
							{
								"name": "WORDPRESS_DB_PASSWORD",
								"value": "password"
							}
						]
					}
				]
			}
		}
	}
}
